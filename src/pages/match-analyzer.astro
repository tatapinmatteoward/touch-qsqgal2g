---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Match Analyzer - Unlock Winning Insights on TouchdownBet Zone";
const pageDescription = "Dive into our advanced Match Analyzer tool on TouchdownBet Zone. Get futuristic, data-driven breakdowns of NFL games, player stats, and betting edges to supercharge your fantasy strategies and wagers.";

const features = [
  {
    title: "Real-Time Data Fusion",
    description: "Harness live stats, historical trends, and predictive algorithms to forecast game outcomes. No more guessingâ€”let the neon glow guide you to victory.",
    icon: "fas fa-bolt"
  },
  {
    title: "Player Performance Deep Dive",
    description: "Break down key players' strengths, injuries, and matchups. Identify fantasy sleepers and betting value plays with laser-focus analysis.",
    icon: "fas fa-user-friends"
  },
  {
    title: "Betting Edge Calculator",
    description: "Our proprietary system calculates optimal betting lines and identifies value opportunities across all major sports markets.",
    icon: "fas fa-chart-line"
  },
  {
    title: "Fantasy Draft Projections",
    description: "Predict player performance for your fantasy leagues with our advanced projection models and lineup optimization tools.",
    icon: "fas fa-trophy"
  }
];

const matchups = [
  { team1: "Dallas Cowboys", team2: "New York Giants", time: "7:00 PM ET", score: "24-17" },
  { team1: "Kansas City Chiefs", team2: "Denver Broncos", time: "10:00 PM ET", score: "31-24" },
  { team1: "Philadelphia Eagles", team2: "Chicago Bears", time: "1:00 PM ET", score: "28-21" },
  { team1: "Buffalo Bills", team2: "Miami Dolphins", time: "4:00 PM ET", score: "42-14" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  {/* Hero Section with Neon Grid Background */}
  <div class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-[#0a0a15] z-0">
      <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23007bff" fill-opacity="0.1"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="flex flex-col md:flex-row items-center justify-between">
        <div class="md:w-1/2 mb-10 md:mb-0">
          <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
            Match Analyzer: Your <span class="text-[#007bff]">Neon-Powered</span> Edge
          </h1>
          <p class="text-xl text-gray-300 mb-8 max-w-lg">
            Dive into our advanced Match Analyzer tool on TouchdownBet Zone. Get futuristic, data-driven breakdowns of NFL games, player stats, and betting edges to supercharge your fantasy strategies and wagers.
          </p>
          <div class="flex space-x-4">
            <button class="bg-[#007bff] hover:bg-[#0069d9] text-white font-bold py-3 px-8 rounded-full transition duration-300 transform hover:scale-105 shadow-lg shadow-[#007bff]/30">
              Start Analyzing
            </button>
            <button class="border-2 border-[#ff1744] text-[#ff1744] hover:bg-[#ff1744] hover:text-white font-bold py-3 px-8 rounded-full transition duration-300">
              View Demo
            </button>
          </div>
        </div>
        
        <div class="md:w-1/2 flex justify-center">
          <div class="relative">
            <div class="w-64 h-64 md:w-80 md:h-80 rounded-full bg-gradient-to-br from-[#007bff] to-[#ff1744] opacity-20 blur-xl absolute -top-10 -left-10 z-0"></div>
            <div class="relative bg-[#0a0a15] border border-[#007bff] rounded-xl p-6 shadow-2xl transform rotate-3 z-10">
              <div class="flex justify-between items-center mb-4">
                <h3 class="text-white text-xl font-bold">Game Prediction</h3>
                <span class="bg-green-500 text-xs px-2 py-1 rounded">Live</span>
              </div>
              
              <div class="space-y-4">
                <div class="flex justify-between items-center">
                  <span class="text-gray-300">Dallas Cowboys</span>
                  <span class="font-bold text-white">24</span>
                </div>
                <div class="flex justify-center">
                  <div class="h-px w-32 bg-gradient-to-r from-transparent via-[#007bff] to-transparent"></div>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-gray-300">New York Giants</span>
                  <span class="font-bold text-white">17</span>
                </div>
              </div>
              
              <div class="mt-6 pt-4 border-t border-gray-700">
                <div class="flex justify-between text-sm text-gray-400">
                  <span>Predicted Winner</span>
                  <span class="text-[#007bff] font-bold">Cowboys +7.5</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {/* Features Section */}
  <section class="py-20 bg-gradient-to-b from-[#0a0a15] to-[#111]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Why Choose Our <span class="text-[#007bff]">Match Analyzer?</span>
        </h2>
        <p class="text-gray-400 max-w-2xl mx-auto">
          Our futuristic tools combine cutting-edge analytics with intuitive design to give you the edge you need in today's competitive betting landscape.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {features.map((feature, index) => (
          <div key={index} class="bg-[#111] rounded-xl p-6 border border-gray-800 hover:border-[#007bff] transition-all duration-300 transform hover:-translate-y-2 group">
            <div class="w-14 h-14 rounded-full bg-[#007bff] bg-opacity-20 flex items-center justify-center mb-6 group-hover:bg-[#007bff] transition-colors">
              <i class={`${feature.icon} text-[#007bff] text-2xl`}></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-3">{feature.title}</h3>
            <p class="text-gray-400">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Live Matchups Section */}
  <section class="py-20 bg-[#0a0a15]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Live <span class="text-[#ff1744]">Matchups</span> & Predictions
        </h2>
        <p class="text-gray-400 max-w-2xl mx-auto">
          Real-time analysis of upcoming games with expert predictions and betting recommendations.
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
        {matchups.map((match, index) => (
          <div key={index} class="bg-gradient-to-r from-[#111] to-[#1a1a2e] border border-[#007bff] rounded-xl p-6 hover:border-[#ff1744] transition-all duration-300 group">
            <div class="flex justify-between items-center mb-4">
              <span class="text-gray-400 text-sm">{match.time}</span>
              <span class="bg-[#ff1744] text-white text-xs px-2 py-1 rounded">Live</span>
            </div>
            
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center">
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-[#007bff] to-[#0056b3] flex items-center justify-center mr-3">
                  <span class="text-white font-bold">D</span>
                </div>
                <span class="text-white font-semibold">{match.team1}</span>
              </div>
              
              <div class="text-center">
                <div class="text-white font-bold text-xl">{match.score.split('-')[0]}</div>
                <div class="text-gray-500 text-sm">VS</div>
                <div class="text-white font-bold text-xl">{match.score.split('-')[1]}</div>
              </div>
              
              <div class="flex items-center">
                <span class="text-white font-semibold mr-3">{match.team2}</span>
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-[#ff1744] to-[#cc0033] flex items-center justify-center">
                  <span class="text-white font-bold">N</span>
                </div>
              </div>
            </div>
            
            <div class="flex justify-between text-sm">
              <div class="flex items-center">
                <div class="w-3 h-3 rounded-full bg-green-500 mr-2 animate-pulse"></div>
                <span class="text-green-400">Prediction: <span class="font-bold">Cowboys</span></span>
              </div>
              <button class="text-[#007bff] hover:text-[#0056b3] font-medium flex items-center">
                View Details
                <i class="fas fa-chevron-right ml-1 text-xs"></i>
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Statistics Card Section */}
  <section class="py-20 bg-gradient-to-b from-[#111] to-[#0a0a15]">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="bg-gradient-to-br from-[#111] to-[#1a1a2e] border border-[#007bff] rounded-xl p-8 shadow-xl">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            <div class="text-center">
              <div class="text-3xl font-bold text-white mb-2">87%</div>
              <div class="text-gray-400 text-sm">Accuracy Rate</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-white mb-2">24/7</div>
              <div class="text-gray-400 text-sm">Analysis</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-white mb-2">15K+</div>
              <div class="text-gray-400 text-sm">Active Users</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-white mb-2">12</div>
              <div class="text-gray-400 text-sm">Years Experience</div>
            </div>
          </div>
          
          <div class="mt-10 pt-8 border-t border-gray-800">
            <h3 class="text-xl font-bold text-white mb-4 text-center">Premium Insights Available</h3>
            <div class="flex justify-center space-x-4">
              <button class="border border-[#007bff] text-[#007bff] hover:bg-[#007bff] hover:text-white font-bold py-2 px-6 rounded-lg transition duration-300">
                Get Premium Access
              </button>
              <button class="bg-[#007bff] hover:bg-[#0069d9] text-white font-bold py-2 px-6 rounded-lg transition duration-300">
                Free Trial
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  
  .neon-border {
    box-shadow: 0 0 15px rgba(0, 123, 255, 0.5);
  }
  
  .neon-hover:hover {
    box-shadow: 0 0 20px rgba(255, 23, 68, 0.7);
  }
</style>