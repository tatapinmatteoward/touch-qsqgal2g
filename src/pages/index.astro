---
import Layout from '../layouts/Layout.astro';

const pageTitle = "TouchdownBet Zone - Home";
const pageDescription = "Dive into the futuristic world of football betting and fantasy strategies with TouchdownBet Zone, your ultimate hub for expert insights, neon-lit tips, and winning plays.";

const features = [
  {
    title: "Expert Betting Picks",
    description: "Neon-powered predictions from top analysts, covering NFL spreads, moneylines, and props.",
    icon: "fas fa-dice"
  },
  {
    title: "Fantasy Football Mastery",
    description: "Draft strategies, waiver wire gems, and lineup optimizers to dominate your league.",
    icon: "fas fa-trophy"
  },
  {
    title: "Live Insights & Trends",
    description: "Real-time updates on player stats, injuries, and market movements.",
    icon: "fas fa-bolt"
  },
  {
    title: "Data-Driven Analytics",
    description: "Advanced metrics and predictive models to inform your betting decisions.",
    icon: "fas fa-chart-line"
  }
];

const testimonials = [
  {
    name: "Marcus Johnson",
    role: "Seasoned Bettor",
    content: "TouchdownBet has revolutionized how I approach football betting. The insights are unmatched."
  },
  {
    name: "Sarah Williams",
    role: "Fantasy League Champion",
    content: "My league wins have tripled since I started using their draft strategies. Game-changing!"
  },
  {
    name: "David Chen",
    role: "Sports Analyst",
    content: "The depth of analysis and real-time trends make this my go-to source for football intelligence."
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="min-h-screen bg-black text-white">
    {/* Hero Section */}
    <section class="relative overflow-hidden">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-purple-900/20 via-black to-black"></div>
        <div class="absolute inset-0 bg-[linear-gradient(135deg,_rgba(0,123,255,0.1)_0%,_rgba(255,23,68,0.1)_100%)]"></div>
        
        {/* Grid Pattern */}
        <div class="absolute inset-0 [mask-image:linear-gradient(transparent_50%,white_100%)]">
          <div class="grid-pattern absolute inset-0 opacity-20"></div>
        </div>
      </div>
      
      <div class="relative z-10 container mx-auto px-4 py-24 md:py-32 flex flex-col items-center text-center">
        <div class="inline-block px-4 py-1 mb-4 bg-gradient-to-r from-blue-500 to-red-500 rounded-full text-xs font-bold tracking-wider">
          <i class="fas fa-star mr-2"></i> FUTURISTIC NEON GRID <i class="fas fa-star ml-2"></i>
        </div>
        
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
          <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-red-500">
            TOUCHDOWNBET ZONE
          </span>
        </h1>
        
        <p class="text-xl md:text-2xl max-w-3xl mb-10 text-gray-300">
          Your Ultimate Hub for Football Betting Insights and Fantasy Strategies
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <button class="px-8 py-4 bg-gradient-to-r from-blue-600 to-blue-800 hover:from-blue-500 hover:to-blue-700 rounded-lg font-bold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg shadow-blue-500/20">
            Explore Expert Picks
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-red-500 hover:bg-red-500/10 rounded-lg font-bold text-lg transition-all duration-300">
            Join Fantasy League
          </button>
        </div>
      </div>
    </section>

    {/* Features Section */}
    <section class="py-20 relative">
      <div class="absolute inset-0">
        <div class="grid-pattern absolute inset-0 opacity-10"></div>
      </div>
      
      <div class="relative z-10 container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Why Choose TouchdownBet Zone?</h2>
          <div class="w-24 h-1 bg-gradient-to-r from-blue-500 to-red-500 mx-auto"></div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {features.map((feature, index) => (
            <div 
              key={index} 
              class="bg-gradient-to-br from-gray-900/50 to-gray-800/30 backdrop-blur-sm p-6 rounded-xl border border-gray-700/50 hover:border-blue-500/50 transition-all duration-300 hover:-translate-y-2 group"
            >
              <div class="w-14 h-14 rounded-full bg-gradient-to-r from-blue-600 to-red-500 flex items-center justify-center mb-4 group-hover:animate-pulse">
                <i class={`${feature.icon} text-white text-xl`}></i>
              </div>
              <h3 class="text-xl font-bold mb-2">{feature.title}</h3>
              <p class="text-gray-400">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Stats Section */}
    <section class="py-20 bg-gradient-to-r from-blue-900/20 to-red-900/20">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
          <div>
            <div class="text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-red-500 mb-2">10K+</div>
            <div class="text-gray-400">Active Members</div>
          </div>
          <div>
            <div class="text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-red-500 mb-2">98%</div>
            <div class="text-gray-400">Success Rate</div>
          </div>
          <div>
            <div class="text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-red-500 mb-2">24/7</div>
            <div class="text-gray-400">Expert Support</div>
          </div>
          <div>
            <div class="text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-red-500 mb-2">50+</div>
            <div class="text-gray-400">NFL Experts</div>
          </div>
        </div>
      </div>
    </section>

    {/* Testimonials */}
    <section class="py-20 relative">
      <div class="absolute inset-0">
        <div class="grid-pattern absolute inset-0 opacity-10"></div>
      </div>
      
      <div class="relative z-10 container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">What Our Community Says</h2>
          <div class="w-24 h-1 bg-gradient-to-r from-blue-500 to-red-500 mx-auto"></div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {testimonials.map((testimonial, index) => (
            <div 
              key={index} 
              class="bg-gradient-to-br from-gray-900/50 to-gray-800/30 backdrop-blur-sm p-8 rounded-xl border border-gray-700/50"
            >
              <div class="text-yellow-400 mb-4">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
              </div>
              <p class="text-gray-300 italic mb-6">"{testimonial.content}"</p>
              <div>
                <div class="font-bold">{testimonial.name}</div>
                <div class="text-sm text-gray-500">{testimonial.role}</div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* CTA Section */}
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="bg-gradient-to-r from-blue-900/40 to-red-900/40 rounded-2xl p-10 md:p-16 text-center border border-gray-800">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Dominate the Grid?</h2>
          <p class="text-xl max-w-2xl mx-auto mb-10 text-gray-300">
            Join thousands of successful bettors and fantasy champions today. Get instant access to all premium insights.
          </p>
          <div class="flex flex-col sm:flex-row justify-center gap-4">
            <button class="px-8 py-4 bg-gradient-to-r from-blue-600 to-blue-800 hover:from-blue-500 hover:to-blue-700 rounded-lg font-bold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg shadow-blue-500/20">
              Get Started Today
            </button>
            <button class="px-8 py-4 bg-transparent border-2 border-red-500 hover:bg-red-500/10 rounded-lg font-bold text-lg transition-all duration-300">
              View Demo
            </button>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .grid-pattern {
    background-image: 
      linear-gradient(rgba(0, 123, 255, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 123, 255, 0.1) 1px, transparent 1px);
    background-size: 30px 30px;
  }
  
  @keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(0, 123, 255, 0.4); }
    70% { box-shadow: 0 0 0 10px rgba(0, 123, 255, 0); }
    100% { box-shadow: 0 0 0 0 rgba(0, 123, 255, 0); }
  }
  
  .animate-pulse {
    animation: pulse 2s infinite;
  }
</style>