---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Fantasy Football Tips: Dominate Your League with Expert Strategies";
const pageDescription = "Unlock winning fantasy football tips at TouchdownBet Zone. From draft day mastery to in-season maneuvers, our futuristic insights light up your path to championship glory in the neon grid of competition.";

const tipsSections = [
  {
    title: "Draft Day Mastery",
    description: "The draft sets the foundation for your season. Approach it like a high-stakes heist in a cyberpunk thriller—precision is key.",
    tips: [
      {
        title: "Prioritize Versatility",
        description: "Target players who excel in multiple areas, like dual-threat QBs or RBs with receiving skills.",
        example: "Christian McCaffrey is a neon beacon for all-around production."
      },
      {
        title: "Balance Your Roster",
        description: "Don't overload on one position. Spread your picks across key roles.",
        example: "Secure 2-3 RBs, 2-3 WRs, and 1-2 QBs with depth."
      },
      {
        title: "Consider Bye Weeks",
        description: "Plan around bye weeks before drafting your team.",
        example: "Select players with favorable bye schedules early."
      }
    ]
  },
  {
    title: "In-Season Maneuvers",
    description: "Mastering your roster during the season is what separates good managers from champions.",
    tips: [
      {
        title: "Monitor Injury Reports",
        description: "Stay ahead of the curve with injury updates throughout the week.",
        example: "Drop a starter if their injury timeline is uncertain."
      },
      {
        title: "Trade Strategically",
        description: "Leverage weekly matchups to make smart trades.",
        example: "Acquire a player facing a weak defense late in the season."
      },
      {
        title: "Embrace Waiver Wire",
        description: "Scout the waiver wire daily for undervalued gems.",
        example: "Add a backup RB with favorable matchups next week."
      }
    ]
  },
  {
    title: "Advanced Tactics",
    description: "Take your strategy to the next level with these expert techniques.",
    tips: [
      {
        title: "Utilize PPR Formats",
        description: "In PPR leagues, focus on players who contribute in multiple ways.",
        example: "Prioritize tight ends and running backs who catch passes."
      },
      {
        title: "Analyze Matchup Data",
        description: "Use advanced metrics to identify favorable matchups.",
        example: "Seek receivers facing inferior secondaries consistently."
      },
      {
        title: "Manage Your Bench",
        description: "Your bench can make or break your performance.",
        example: "Keep an elite backup quarterback ready for rotation."
      }
    ]
  }
];

const featuredPlayers = [
  { name: "Christian McCaffrey", position: "RB", team: "SF", stats: "21.5 FPTS" },
  { name: "Tyreek Hill", position: "WR", team: "MIA", stats: "18.2 FPTS" },
  { name: "Josh Allen", position: "QB", team: "BUF", stats: "19.8 FPTS" },
  { name: "Travis Kelce", position: "TE", team: "KC", stats: "17.6 FPTS" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-br from-primary to-accent py-20 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="grid grid-cols-12 gap-4 h-full">
        {Array.from({ length: 144 }).map((_, i) => (
          <div key={i} class="border border-white border-opacity-20"></div>
        ))}
      </div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 animate-fade-in">
          Fantasy Football Tips
        </h1>
        <p class="text-xl md:text-2xl text-white opacity-90 mb-8 animate-slide-up">
          Dominate Your League with Expert Strategies
        </p>
        <div class="flex justify-center">
          <div class="w-24 h-1 bg-white rounded-full"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Tagline Section -->
  <div class="bg-black py-8 border-b border-accent">
    <div class="container mx-auto px-4">
      <p class="text-center text-accent text-lg font-mono tracking-wider">
        Your Ultimate Hub for Football Betting Insights and Fantasy Strategies
      </p>
    </div>
  </div>

  <!-- Content Sections -->
  <section class="py-16 bg-black">
    <div class="container mx-auto px-4">
      <div class="mb-16 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          <span class="text-primary">Proven</span> Strategies for Championship Success
        </h2>
        <div class="w-24 h-1 bg-accent mx-auto"></div>
        <p class="text-gray-400 mt-6 max-w-3xl mx-auto">
          Welcome to the TouchdownBet Zone, your ultimate hub for football betting insights and fantasy strategies. 
          In this neon-lit arena of the futuristic grid, we've compiled essential tips to supercharge your fantasy football game.
        </p>
      </div>

      <!-- Tips Sections -->
      <div class="space-y-16">
        {tipsSections.map((section, index) => (
          <div key={index} class="bg-gradient-to-r from-gray-900 to-gray-950 rounded-2xl p-6 md:p-8 border border-gray-800 shadow-lg hover:border-primary transition-all duration-300">
            <div class="flex items-start mb-6">
              <div class="mr-4 mt-1">
                <div class="w-12 h-12 rounded-full bg-primary flex items-center justify-center">
                  <i class="fas fa-lightbulb text-white text-xl"></i>
                </div>
              </div>
              <div>
                <h3 class="text-2xl font-bold text-white mb-2">{section.title}</h3>
                <p class="text-gray-400">{section.description}</p>
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
              {section.tips.map((tip, tipIndex) => (
                <div key={tipIndex} class="bg-gray-900/50 p-6 rounded-xl border border-gray-800 hover:border-accent transition-all duration-300 group">
                  <div class="flex items-center mb-4">
                    <div class="w-8 h-8 rounded-full bg-accent flex items-center justify-center mr-3">
                      <i class="fas fa-check text-white"></i>
                    </div>
                    <h4 class="text-lg font-bold text-white">{tip.title}</h4>
                  </div>
                  <p class="text-gray-300 mb-4">{tip.description}</p>
                  <div class="pt-3 border-t border-gray-800">
                    <p class="text-sm text-accent italic"><i class="fas fa-quote-left mr-2"></i>{tip.example}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>

      <!-- Featured Players Section -->
      <div class="mt-20">
        <div class="text-center mb-12">
          <h3 class="text-3xl font-bold text-white mb-4">Top Performers This Week</h3>
          <div class="w-24 h-1 bg-accent mx-auto"></div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {featuredPlayers.map((player, index) => (
            <div key={index} class="bg-gradient-to-br from-gray-900 to-gray-950 rounded-xl p-6 border border-gray-800 hover:border-primary transition-all duration-300 group">
              <div class="flex justify-between items-start mb-4">
                <div>
                  <h4 class="text-xl font-bold text-white group-hover:text-primary transition-colors">{player.name}</h4>
                  <p class="text-gray-400">{player.position} • {player.team}</p>
                </div>
                <div class="bg-accent text-white text-xs font-bold px-3 py-1 rounded-full">
                  {player.stats}
                </div>
              </div>
              <div class="mt-4">
                <div class="w-full bg-gray-800 rounded-full h-2">
                  <div class="bg-gradient-to-r from-primary to-accent h-2 rounded-full" style="width: 85%"></div>
                </div>
                <p class="text-right text-xs text-gray-500 mt-1">High Impact</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-primary/10 to-accent/10">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Ready to Dominate Your Fantasy League?
        </h2>
        <p class="text-gray-300 mb-10 text-lg">
          Join thousands of successful fantasy managers who trust TouchdownBet Zone for expert insights and strategies
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-primary hover:bg-blue-600 text-white font-bold rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg shadow-primary/30">
            Get Premium Tips
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-accent text-accent hover:bg-accent hover:text-white font-bold rounded-lg transition-all duration-300">
            Explore Strategies
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideUp {
    from { 
      opacity: 0;
      transform: translateY(20px);
    }
    to { 
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
  }
  
  .animate-slide-up {
    animation: slideUp 0.8s ease-out forwards;
  }
  
  .neon-grid {
    background-image: 
      linear-gradient(rgba(0, 123, 255, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 123, 255, 0.1) 1px, transparent 1px);
    background-size: 20px 20px;
  }
  
  .neon-text {
    text-shadow: 0 0 5px #007bff, 0 0 10px #007bff, 0 0 15px #007bff;
  }
</style>