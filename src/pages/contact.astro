---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Contact Us - StakeWise Tactics";
const pageDescription = "Reach out to the StakeWise Tactics team for inquiries, feedback, or collaboration opportunities on football betting strategies and insights.";
const contactMethods = [
  {
    title: "General Inquiries",
    email: "info@stakewisetactics.com",
    description: "Send your message to our team for general inquiries or support."
  },
  {
    title: "Partnerships & Collaborations",
    email: "partnerships@stakewisetactics.com",
    description: "Reach out if you're a betting expert, content creator, or affiliate interested in working together."
  }
];
const socialMedia = [
  { name: "Twitter", handle: "@StakeWiseTactics", url: "https://twitter.com/StakeWiseTactics", icon: "fab fa-twitter" },
  { name: "LinkedIn", handle: "StakeWise Tactics", url: "https://linkedin.com/company/stakewisetactics", icon: "fab fa-linkedin" },
  { name: "Instagram", handle: "@stakewisetactics", url: "https://instagram.com/stakewisetactics", icon: "fab fa-instagram" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-br from-primary to-[#0d2a1a] py-24 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSI2MCIgaGVpZ2h0PSI2MCI+CjxyZWN0IHdpZHRoPSI2MCIgaGVpZ2h0PSI2MCIgZmlsbD0ibm9uZSIvPgo8cGF0aCBkPSJNMCAwaDYwdjYwSDB6IiBmaWxsPSIjZTZiODAwIiBvcGFjaXR5PSIwLjA1Ii8+Cjwvc3ZnPg==')]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 tracking-tight">
        Contact Us
      </h1>
      <p class="text-xl md:text-2xl text-accent max-w-3xl mx-auto">
        Strategic Insights for Smarter Football Betting
      </p>
      
      <div class="mt-12 flex justify-center">
        <div class="bg-white/10 backdrop-blur-sm rounded-full px-6 py-3 inline-flex items-center space-x-2">
          <span class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></span>
          <span class="text-white font-medium">We respond within 24-48 hours</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <section class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <div class="bg-white rounded-2xl shadow-xl p-6 md:p-10 border border-gray-100">
        <div class="prose prose-lg max-w-none">
          <p class="text-gray-700 leading-relaxed">
            At <strong class="text-primary">StakeWise Tactics</strong>, we're passionate about delivering 
            <em class="text-accent"> strategic insights for smarter football betting</em>. Whether you have questions 
            about our analyses, want to suggest new features, or are interested in partnerships, we're here to help.
          </p>
          
          <div class="mt-10">
            <h2 class="text-2xl font-bold text-primary mb-6">Get in Touch</h2>
            
            <div class="space-y-6">
              {contactMethods.map((method, index) => (
                <div key={index} class="border-l-4 border-accent pl-6 py-4 bg-gray-50 rounded-r-lg transition-all duration-300 hover:shadow-md">
                  <h3 class="text-xl font-semibold text-gray-800">{method.title}</h3>
                  <p class="text-gray-600 mt-2">{method.description}</p>
                  <a href={`mailto:${method.email}`} class="inline-flex items-center mt-3 text-accent hover:text-primary font-medium">
                    <i class="fas fa-envelope mr-2"></i>
                    {method.email}
                  </a>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Social Media Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-primary mb-2">Connect With Us</h2>
        <p class="text-gray-600 mb-10">Follow us on social media for updates and insights</p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {socialMedia.map((platform, index) => (
            <a 
              key={index} 
              href={platform.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="bg-white rounded-xl shadow-md p-6 flex flex-col items-center justify-center transition-all duration-300 hover:shadow-lg hover:-translate-y-1 border border-gray-100 group"
            >
              <i class={`${platform.icon} text-4xl text-primary group-hover:text-accent mb-4`}></i>
              <h3 class="text-lg font-semibold text-gray-800">{platform.name}</h3>
              <p class="text-gray-600 mt-1">@{platform.handle}</p>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-primary to-[#0d2a1a]">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Elevate Your Betting Strategy?</h2>
      <p class="text-xl text-white/90 max-w-2xl mx-auto mb-10">
        Join thousands of bettors who rely on our tactical insights every week
      </p>
      <a 
        href="mailto:info@stakewisetactics.com" 
        class="inline-block bg-accent text-primary font-bold py-4 px-8 rounded-lg shadow-lg hover:bg-yellow-500 transition-all duration-300 transform hover:scale-105"
      >
        Start Your Journey Today
      </a>
    </div>
  </section>
</Layout>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
</style>