---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Betting Insights - TouchdownBet Zone";
const pageDescription = "Explore cutting-edge football betting insights, expert analyses, and strategic tips to supercharge your wagers. Navigate the neon grid of odds and predictions for ultimate success in sports betting and fantasy football.";
const featuredTips = [
  {
    id: 1,
    title: "Week 10 NFL Spotlight",
    prediction: "The Kansas City Chiefs will cover the spread against the Denver Broncos",
    odds: "5.2",
    confidence: "92%",
    type: "Spread"
  },
  {
    id: 2,
    title: "Fantasy Football Edge",
    prediction: "Josh Allen leads all quarterbacks in rushing yards this week",
    odds: "3.8",
    confidence: "87%",
    type: "Prop Bet"
  },
  {
    id: 3,
    title: "Injury Impact Analysis",
    prediction: "Tampa Bay's defense is likely to struggle against run-heavy offenses",
    odds: "2.1",
    confidence: "78%",
    type: "Defense"
  }
];
const benefits = [
  {
    icon: "fas fa-brain",
    title: "Expert Analysis",
    description: "Powered by AI and seasoned pros, we break down stats, trends, and player performances."
  },
  {
    icon: "fas fa-bolt",
    title: "Real-Time Updates",
    description: "Stay ahead with live odds fluctuations and injury reports."
  },
  {
    icon: "fas fa-chart-line",
    title: "Proven Strategies",
    description: "From moneyline mastery to prop bet precision, learn techniques that boost your ROI."
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  {/* Hero Section with Neon Grid */}
  <div class="relative min-h-screen overflow-hidden bg-black">
    {/* Animated Grid Background */}
    <div class="absolute inset-0 z-0">
      <div class="grid-background"></div>
    </div>
    
    {/* Content Overlay */}
    <div class="relative z-10 container mx-auto px-4 py-20 md:py-32">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
          Betting<span class="text-accent">Insights</span>
        </h1>
        <p class="text-xl md:text-2xl text-blue-200 mb-10 max-w-3xl mx-auto">
          Your Ultimate Hub for Football Betting Insights and Fantasy Strategies
        </p>
        
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-3 bg-primary hover:bg-blue-600 text-white font-bold rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg shadow-blue-500/30">
            Explore Tips
          </button>
          <button class="px-8 py-3 bg-transparent border-2 border-accent text-accent hover:bg-accent hover:text-white font-bold rounded-lg transition-all duration-300 transform hover:scale-105">
            Join Beta
          </button>
        </div>
      </div>
    </div>
    
    {/* Scroll Indicator */}
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <i class="fas fa-chevron-down text-white text-2xl"></i>
    </div>
  </div>

  {/* Benefits Section */}
  <section class="py-20 relative">
    <div class="absolute inset-0 z-0">
      <div class="grid-pattern"></div>
    </div>
    
    <div class="relative z-10 container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Why Choose Our Insights?</h2>
        <div class="w-24 h-1 bg-accent mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {benefits.map((benefit) => (
          <div key={benefit.title} class="bg-gray-900/70 backdrop-blur-sm border border-blue-500/30 p-8 rounded-xl hover:border-accent transition-all duration-300 transform hover:-translate-y-2">
            <div class="text-4xl text-accent mb-4">
              <i class={benefit.icon}></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-3">{benefit.title}</h3>
            <p class="text-blue-200">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Featured Tips Section */}
  <section class="py-20 bg-gray-900/50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Featured Betting Tips</h2>
        <p class="text-blue-200 max-w-2xl mx-auto">
          Premium predictions crafted by our expert analysts to elevate your betting game
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {featuredTips.map((tip) => (
          <div key={tip.id} class="bg-gradient-to-br from-gray-800 to-gray-900 border border-blue-500/30 rounded-xl overflow-hidden hover:border-accent transition-all duration-300 transform hover:scale-[1.02] shadow-xl">
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <span class="inline-block px-3 py-1 bg-blue-900/50 text-blue-300 text-sm rounded-full">
                  {tip.type}
                </span>
                <span class="text-xs bg-accent/20 text-accent px-2 py-1 rounded">
                  {tip.odds}x
                </span>
              </div>
              
              <h3 class="text-xl font-bold text-white mb-3">{tip.title}</h3>
              <p class="text-blue-100 mb-6">{tip.prediction}</p>
              
              <div class="flex justify-between items-center">
                <span class="text-green-400 font-bold">{tip.confidence}</span>
                <button class="px-4 py-2 bg-primary hover:bg-blue-600 text-white text-sm rounded-lg transition-colors">
                  Place Bet
                </button>
              </div>
            </div>
            
            <div class="bg-gradient-to-r from-transparent via-blue-500/10 to-transparent h-1"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* CTA Section */}
  <section class="py-20 relative">
    <div class="absolute inset-0 z-0">
      <div class="grid-background"></div>
    </div>
    
    <div class="relative z-10 container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center bg-gray-900/70 backdrop-blur-sm border border-blue-500/30 rounded-2xl p-10 md:p-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Ready to Dominate the Grid?
        </h2>
        <p class="text-blue-200 mb-10 max-w-2xl mx-auto">
          Join thousands of premium users who trust our insights to make smarter football bets every week
        </p>
        
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-primary hover:bg-blue-600 text-white font-bold rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg shadow-blue-500/30">
            Get Premium Access
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-accent text-accent hover:bg-accent hover:text-white font-bold rounded-lg transition-all duration-300 transform hover:scale-105">
            Try Free Week
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .grid-background {
    background-size: 40px 40px;
    background-image: 
      linear-gradient(to right, rgba(0, 123, 255, 0.1) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(0, 123, 255, 0.1) 1px, transparent 1px);
    animation: grid-move 20s linear infinite;
  }

  .grid-pattern {
    background-size: 60px 60px;
    background-image: 
      radial-gradient(circle at 10px 10px, rgba(0, 123, 255, 0.1) 1px, transparent 0),
      radial-gradient(circle at 30px 30px, rgba(255, 23, 68, 0.1) 1px, transparent 0);
  }

  @keyframes grid-move {
    0% { transform: translate(0, 0); }
    100% { transform: translate(40px, 40px); }
  }

  .animate-glow {
    animation: glow 2s ease-in-out infinite alternate;
  }

  @keyframes glow {
    from { box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); }
    to { box-shadow: 0 0 20px rgba(0, 123, 255, 0.8), 0 0 30px rgba(0, 123, 255, 0.6); }
  }
</style>