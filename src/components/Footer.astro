---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-facebook', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-tiktok', url: '#' }
];
---

<footer class="bg-black border-t border-purple-500/30 relative overflow-hidden">
  <div class="absolute inset-0 bg-[linear-gradient(rgba(0,123,255,0.1)_1px,transparent_1px),linear-gradient(90deg,rgba(0,123,255,0.1)_1px,transparent_1px)] bg-[size:20px_20px]"></div>
  
  <div class="relative container mx-auto px-4 py-8 text-center">
    <div class="mb-4">
      <h2 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-pink-500">TouchdownBet Zone</h2>
    </div>
    
    <p class="text-gray-400 mb-4">
      &copy; {currentYear} TouchdownBet Zone. All rights reserved.
    </p>
    
    <div class="flex justify-center gap-6 mb-4">
      {socialLinks.map((link, index) => (
        <a 
          href={link.url} 
          key={index}
          class="text-gray-300 hover:text-blue-400 transition-colors duration-300"
          aria-label={`Follow us on ${link.icon.split('-')[2]}`}
        >
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
    
    <div class="border-t border-gray-800 pt-4">
      <p class="text-sm text-gray-500">
        <span class="text-blue-400">Neon Grid Theme</span> | 
        <span class="text-pink-500"> Futuristic Design</span>
      </p>
    </div>
  </div>
</footer>